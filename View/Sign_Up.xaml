<Window x:Class="Kurs.Sign_Up"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign_Up" Height="314" Width="340" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- Заголовок -->
        <Label Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" FontSize="24" Foreground="Black"/>

        <!-- Поля для ввода логина и пароля -->
        <Grid Margin="50,80,50,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Логин -->
            <Label Content="Логин:" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="loginTextBox" Grid.Row="1" Margin="0,4,0,0" VerticalAlignment="Top"/>

            <!-- Пароль -->
            <Label Content="Пароль:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <PasswordBox x:Name="passwordTextBox" Grid.Row="1" Margin="0,53,0,0" VerticalAlignment="Top"/>
        </Grid>

        <!-- Кнопка для создания аккаунта -->
        <Button Content="Создать аккаунт" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,201,0,0" Click="Button_Click" Height="31" Width="165" BorderBrush="Black" Background="White"/>
    </Grid>
</Window>
